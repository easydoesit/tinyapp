<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
  
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
          <li class = "nav-item">
            <a class="nav-item nav-link" href="/urls">My URLs</a>
          </li>
          <li class = "nav-item">
            <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
          </li>
        </ul>
        <% if (user) { %>
        <form class="form-inline my-2 my-lg-0" method="Post"
          action="/logout">
          Logged in as: <%= user.email %> &nbsp;&nbsp;
            <button type="submit" class="btn btn-primary my-2 my-sm-0">Logout</button>
          </form>
          <% } else { %>
            <a href="/login"><button class="btn btn-primary my-2 my-sm-0">Login</button></a> &nbsp;&nbsp;&nbsp;&nbsp;
            <a href="/register"><button class="btn btn-primary my-2 my-sm-0">Register</button></a>
          <% } %>
      </div>
  
  </nav>
</header>