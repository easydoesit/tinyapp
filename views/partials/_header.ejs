<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
  
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
          <li class = "nav-item">
            <a class="nav-item nav-link" href="/urls">My URLs</a>
          </li>
          <li class = "nav-item">
            <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0" method="Post"
          <% if (username) { %>
          action="/logout">
          Logged in as: <%= username.username %> &nbsp;&nbsp;
            <button type="submit" class="btn btn-primary my-2 my-sm-0">Logout</button>
          <% } else { %>
          action="/login">
            <input class="form-control mr-sm-2" type = "text" name="username" placeholder="Username" style="width:300px margin: 1em"/>
            <button type="submit" class="btn btn-primary my-2 my-sm-0">Login</button>
          <% } %>
      </form>
      </div>
  
  </nav>
</header>